<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.saymtf.habitformer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Habit"
            android:label="@string/title_activity_habit"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.saymtf.habitformer.MainActivity" />
        </activity>
        <activity
            android:name=".DisplayHabit"
            android:label="@string/title_activity_display_habit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HabitTimer"
            android:label="@string/title_activity_habit_timer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConfigureTime"
            android:label="@string/title_activity_configure_time"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.saymtf.habitformer.MainActivity" />
        </activity>
        <activity
            android:name=".Introduction"
            android:label="@string/title_activity_introduction"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.saymtf.habitformer.MainActivity" />
        </activity>
        <activity
            android:name=".IntroductionTwo"
            android:label="@string/title_activity_introduction_two"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.saymtf.habitformer.MainActivity" />
        </activity>
        <activity
            android:name=".IntroductionThree"
            android:label="@string/title_activity_introduction_three"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.saymtf.habitformer.MainActivity" />
        </activity>
    </application>

</manifest>